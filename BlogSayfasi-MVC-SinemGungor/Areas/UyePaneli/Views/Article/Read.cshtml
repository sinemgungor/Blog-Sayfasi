

 @model BlogSayfasi_MVC_SinemGungor.Models.Article

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h1 class="text-center">@Model.Title</h1>
                <hr />
                <p>@Model.Content</p>

                <div class="mt-4">
                    <p><strong>Yazar:</strong> <a asp-action="AuthorDetails" asp-route-username="@Model.Author.UserName">@Model.Author.FirstName @Model.Author.LastName</a></p>
                    <p><strong>Yayınlanma Tarihi:</strong> @Model.CreatedTime.ToString("dd/MM/yyyy")</p>
                    <p><strong>Kategoriler:</strong></p>
                    <div>
                        @foreach (var category in Model.ArticleCategories.Select(ac => ac.Category))
                        {
                            <span class="badge bg-secondary me-1">@category.Name</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
