

 @model IEnumerable<BlogSayfasi_MVC_SinemGungor.Models.Article>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center mb-4">Makale Listesi</h1>

            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Başlık</th>
                        <th scope="col">Yayınlanma Tarihi</th>
                        <th scope="col">Kategoriler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Read" asp-route-id="@article.Id" class="text-decoration-none text-primary">@article.Title</a>
                            </td>
                            <td>@article.CreatedTime.ToString("dd/MM/yyyy")</td>
                            <td>
                                @foreach (var category in article.ArticleCategories.Select(ac => ac.Category))
                                {
                                    <span class="badge bg-secondary">@category.Name</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
