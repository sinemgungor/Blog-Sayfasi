

@model BlogSayfasi_MVC_SinemGungor.Models.VM.VisitorHomePageVM

<div class="container mt-4">
    <h1 class="text-center">Hoşgeldiniz</h1>
    <p class="text-center lead">Fikir Atölyesine hoşgeldiniz! Makale yazmak için üye olun!</p>
    <div class="text-center mb-4">
        <a asp-action="About" asp-controller="Home" class="btn btn-primary">Hakkımızda</a>
    </div>

    <h2 class="text-center">En Çok Okunan Makaleler</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <ul class="list-group mb-4 list-group-hover">
                @foreach (var article in Model.PopularArticles.Take(4))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-area="UyePaneli" asp-controller="Article" asp-action="Read" asp-route-id="@article.Id">@article.Title</a>
                        <span class="badge bg-primary rounded-pill">@article.ReadCount okunma</span>
                    </li>
                }
            </ul>
        </div>
    </div>

    <h2 class="text-center">Kategoriler</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="list-group-hover" style="max-height: 300px; overflow-y: auto;">
                <ul class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a asp-area="" asp-controller="Category" asp-action="CategoryArticles" asp-route-id="@category.Id">@category.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .list-group-hover .list-group-item:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .list-group-hover {
        max-height: 300px;
        overflow-y: auto;
    }
</style>
